<title>
    <%= title %>
</title>
<h1>
    <%= title %>
</h1><hr>
<%= messages() %>

        <div id="login_form">
            <form action="/account/login" method="POST">
                <label for="email">*Email Adddress: <br>
                    <input type="email" name="account_email" id="email" required placeholder="johndoe@gmail.com">
                </label><br><br>
                <label for="password">*password: <br>
                    <input type="password" name="account_password" id="password" required
                        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br><br>
                </label>
                <span class="caution"><i>Passwords must be at least 12 characters and contain at least 1 number, 1
                    capital letter and 1
                    special character</i></span><br><br>
                <button type="submit" id="login">Login</button>
            </form>

            <p id="register">No account? <a href="/account/register">Sign-up</a></p>
        </div>