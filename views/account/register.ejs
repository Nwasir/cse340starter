<title>
    <%= title %>
</title>
<h1>
    <%= title %>
</h1>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>

            <% }) %>
    </ul>
    <% } %>
        <div id="register_form">
            <form action="/account/register" method="post">
                <label for="fname">*First name <br>
                    <input type="text" name="account_firstname" id="fname" required placeholder="John">
                </label><br><br>
                <label for="lname">*Last name <br>
                    <input type="text" name="account_lastname" id="lname" required placeholder="Doe">
                </label><br><br>
                <label for="email">*Email address <br>
                    <input type="email" name="account_email" id="email" required
                        placeholder="Enter a valid email address">
                </label><br><br>
                <label for="password">*Password <br>
                    <input type="password" name="account_password" id="password" required
                        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                </label><br><br>
                <span class="reminder"><i>Passwords must be at least 12 characters and contain at least 1 number, 1
                        capital letter and 1
                        special character</i></span><br><br>
                <button type="submit" id="register">Register</button>
            </form>
        </div>