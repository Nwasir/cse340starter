<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <div id="add-classification">
                        <form action="/inv/add-classification" method="post">
                            <label for="classificationName"> <strong>Add Classification</strong><br>
                                <input type="text" name="classification_name" id="classificationName" required
                                    pattern="^[a-zA-Z]+$"
                                    value="<%= typeof classification_name != 'undefined' ? classification_name : '' %>">
                            </label><br><br>
                            <button type="submit" id="add-classification">Add Classification</button>
                        </form>
                    </div>