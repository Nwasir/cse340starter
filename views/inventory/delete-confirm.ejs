<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>

                <% } %>
                    <div id="add-vehicle">
                        <p>Confirm Deletion - the Deletion is permanent.</p><br>
                        <form action="/inv/delete" method="post">

                            <label for="make"><strong>Make</strong><br>
                                <input type="text" readonly <% if(locals.inv_make) { %>
                                value="<%= locals.inv_make %>"
                                    <% } %> >
                            </label><br>
                            <label for="model"><strong>Model</strong><br>
                                <input type="text" <% if(locals.inv_model) { %> value="<%= locals.inv_model %>"
                                    <% } %> >
                            </label><br>
                            <label for="price"><strong>Price</strong><br>
                                <input type="text" readonly <% if(locals.inv_price) { %> value="<%= locals.inv_price %>"
                                    <% } %>>
                            </label><br>
                            <label for="year"><strong>Year</strong><br>
                                <input type="text" readonly <% if(locals.inv_year) { %> value="<%= locals.inv_year %>"
                                    <% } %>>
                            </label><br>
                            <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                                <% } %>><br><br>

                                    <button type="submit" id="add-vehicle">Delete Vehicle </button>
                        </form>
                    </div>